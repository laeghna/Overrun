<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_options"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    tools:context="group7.tcss450.tacoma.uw.edu.overrun.OptionsActivity">



    <TextView
        android:text="@string/options_description"
        android:textSize="56sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/options_title"
        android:textColor="@android:color/black"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="9dp" />


    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/diff_spinner"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="7dp"
        android:entries="@array/difficulty_array"
        android:prompt="@string/diff_text"
        style="@android:style/Widget.Spinner.DropDown" />

    <Button
        android:text="Ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/cancel_button_options"
        android:layout_toRightOf="@+id/cancel_button_options"
        android:layout_toEndOf="@+id/cancel_button_options"
        android:layout_marginLeft="167dp"
        android:layout_marginStart="167dp"
        android:id="@+id/ok_button_options" />

    <Button
        android:text="Cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:id="@+id/cancel_button_options"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/options_title"
        android:layout_toStartOf="@+id/options_title" />

    <TextView
        android:text="@string/diff_text"
        android:textSize="22sp"
        android:textColor="@android:color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_below="@+id/options_title"
        android:layout_alignLeft="@+id/options_volume_text"
        android:layout_alignStart="@+id/options_volume_text" />

    <TextView
        android:text="Volume"
        android:textSize="22sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/options_volume_text"
        android:textColor="@android:color/black"
        android:layout_marginTop="36dp"
        android:layout_below="@+id/diff_spinner"
        android:layout_toLeftOf="@+id/cancel_button_options"
        android:layout_toStartOf="@+id/cancel_button_options" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/volume_bar"
        android:max="100"
        android:layout_below="@+id/options_volume_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="12dp" />
</RelativeLayout>
