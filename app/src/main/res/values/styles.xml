<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="move_button">
        <item name="android:background">@drawable/move_button</item>
        <item name="android:textColor">@color/move_button_colors</item>
    </style>

    <style name="pause_button">
        <item name="android:background">@drawable/pause_button</item>
        <item name="android:textColor">@color/pause_button_colors</item>
    </style>

    <style name="fire_button">
        <item name="android:background">@drawable/fire_button</item>
        <item name="android:textColor">@color/fire_button_colors</item>
    </style>



</resources>
